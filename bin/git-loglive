#!/bin/bash
# Originially stolen from: https://git.io/vi07z

while :
do
    # Outputting like that reduces blinking
    output=$(git --no-pager log --color=always --graph --abbrev-commit --date=relative --pretty=format:'%Cred%h%Creset %s %C(yellow)%D%Creset - %Cgreen(%cd)%Creset' $*)
    clear
    echo "$output"
    sleep 1
done
